<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">
    <Transition
        motion:constraintSetEnd="@+id/endSwipe"
        motion:constraintSetStart="@+id/startSwipe"
        motion:layoutDuringTransition="honorRequest">

    </Transition>

    <ConstraintSet android:id="@+id/startSwipe">

        <Constraint android:id="@id/text">
            <CustomAttribute
                motion:attributeName="textSize"
                motion:customDimension="10sp" />

            <CustomAttribute
                motion:attributeName="textColor"
                motion:customColorValue="@color/textGrayLight" />

        </Constraint>


    </ConstraintSet>

    <ConstraintSet android:id="@+id/endSwipe">

        <Constraint android:id="@id/text">
            <CustomAttribute
                motion:attributeName="textSize"
                motion:customDimension="15sp" />

            <CustomAttribute
                motion:attributeName="textColor"
                motion:customColorValue="@color/commonBlack" />

        </Constraint>

    </ConstraintSet>

</MotionScene>